{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["dom", "es2016"],
    "sourceMap": true
  },
  "files": [
    "src/index.tsx",
    "./global.d.ts"
  ],
  "include": [
    "types",
    "acceptance_test",
    "src/**/*",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}